# API Keys - Required
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Optional API Keys
MEM0_API_KEY=your_mem0_api_key_here
VAPI_API_KEY=your_vapi_api_key_here
SARVAM_API_KEY=your_sarvam_api_key_here

# Model Configuration
REASONING_MODEL=llama-3.1-70b-versatile
VISION_MODEL=gpt-4o
VOICE_MODEL=gpt-4o-mini

# Vector Store Configuration
VECTOR_STORE_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=sovereign_career_architect
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=sovereign_career_architect
EMBEDDING_MODEL=text-embedding-3-small
MEMORY_SEARCH_LIMIT=10

# Mem0 Configuration
MEM0_HOST=https://api.mem0.ai

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_STEALTH=true
BROWSER_TIMEOUT=30

# Voice Configuration
VAPI_WEBHOOK_URL=https://your-domain.com/webhook/vapi
VOICE_LATENCY_TARGET=500

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
MAX_RETRIES=3

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security
CORS_ORIGINS=["*"]
API_KEY_HEADER=X-API-Key